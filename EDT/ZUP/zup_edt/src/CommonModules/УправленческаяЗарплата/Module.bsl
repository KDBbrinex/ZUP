	ОсновныеЗаписи.Колонки.Добавить("Регистратор", РегистрыРасчета.Начисления.ОписаниеТиповПоляРегистратор());
	ОсновныеЗаписи.Колонки.Добавить("НомерСтроки", Новый ОписаниеТипов("Число"));
	ОсновныеЗаписи.Колонки.Добавить("ИдентификаторСтроки", Новый ОписаниеТипов("Число"));
	ОсновныеЗаписи.Колонки.Добавить("Сотрудник", Новый ОписаниеТипов("СправочникСсылка.Сотрудники"));
	ОсновныеЗаписи.Колонки.Добавить("ВидРасчета", Новый ОписаниеТипов("ПланВидовРасчетаСсылка.Начисления"));
	ОсновныеЗаписи.Колонки.Добавить("ПериодДействияНачало", Новый ОписаниеТипов("Дата"));
	ОсновныеЗаписи.Колонки.Добавить("ПериодДействияКонец", Новый ОписаниеТипов("Дата"));
	ОсновныеЗаписи.Колонки.Добавить("БазовыйПериодНачало", Новый ОписаниеТипов("Дата"));
	ОсновныеЗаписи.Колонки.Добавить("БазовыйПериодКонец", Новый ОписаниеТипов("Дата"));
	
	ДанныеНабораНачисления.ФПД.Индексы.Добавить("Регистратор, НомерСтроки");
	ОтборФПД = Новый Структура("Регистратор, НомерСтроки");
	
	СтрокиПоИдентификатору = Новый Соответствие;
	
	ИдентификаторыСтрок = Новый Массив;
	Для Каждого Строка Из СтрокиРасчета Цикл
		ИдентификаторыСтрок.Добавить(Строка.ИдентификаторСтроки);
		СтрокиПоИдентификатору.Вставить(Строка.ИдентификаторСтроки, Строка);
		СтрокаНабора = СтрокиНабора[Строка.ИдентификаторСтроки];
		ЗаполнитьЗначенияСвойств(ОтборФПД, СтрокаНабора);
		
		СтрокиФПД = ДанныеНабораНачисления.ФПД.НайтиСтроки(ОтборФПД);
		
		Для Каждого СтрокаФПД Из СтрокиФПД Цикл
		
			СтрокаОсновныхЗаписей = ОсновныеЗаписи.Добавить();
			ЗаполнитьЗначенияСвойств(СтрокаОсновныхЗаписей, СтрокаНабора);
			ЗаполнитьЗначенияСвойств(СтрокаОсновныхЗаписей, СтрокаФПД);
		КонецЦикла;	
	КонецЦикла;
	
	ТаблицаФПДНабора = ДанныеНабораНачисления.ТаблицаНабора.СкопироватьКолонки();
	Для Каждого СтрокаНабора Из ДанныеНабораНачисления.ТаблицаНабора Цикл
		ЗаполнитьЗначенияСвойств(ОтборФПД, СтрокаНабора);
		
		СтрокиФПД = ДанныеНабораНачисления.ФПД.НайтиСтроки(ОтборФПД);
		
		Для Каждого СтрокаФПД Из СтрокиФПД Цикл
			СтрокаТаблицыФПД = ТаблицаФПДНабора.Добавить();
			ЗаполнитьЗначенияСвойств(СтрокаТаблицыФПД, СтрокаНабора);
			ЗаполнитьЗначенияСвойств(СтрокаТаблицыФПД, СтрокаФПД);
		КонецЦикла;		
	КонецЦикла;	
	
	МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
	ЗарплатаКадры.СоздатьВТПоТаблицеЗначений(МенеджерВременныхТаблиц, ОсновныеЗаписи, "ВТОсновныеЗаписи");
	ЗарплатаКадры.СоздатьВТПоТаблицеЗначений(МенеджерВременныхТаблиц, ДанныеНабораНачисления.ТаблицаНабора, "ВТРегистрРасчета_Начисления");
	ЗарплатаКадры.СоздатьВТПоТаблицеЗначений(МенеджерВременныхТаблиц, ТаблицаФПДНабора, "ВТРегистрРасчета_Начисления_ФактическийПериодДействия");
	
	УдалитьВТ = Новый Массив;
	
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	
	Запрос.Текст = 
		"ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	ОсновныеЗаписи.ВидРасчета КАК Ссылка,
		|	ВидыРасчета.Ссылка КАК ВидРасчета
		|ПОМЕСТИТЬ ВТБазовыеВидыРасчета
		|ИЗ
